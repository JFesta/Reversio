{
  "Globals": {
    "NetCoreVersion": "3.1", //default: "3.1"
    "ExcludeInfoText": false
  },
  "Jobs": [
    {
      "Provider": "System.Data.SqlClient",
      "ConnectionString": "",
      "Steps": [
        {
          "Name": "Load",
          "StepType": "Load",
          "EntityTypes": [ "Table", "View" ],
          "Schemas": [],
          "Exclude": {
            "ExcludeExact": [],
            "ExcludeRegex": []
          }
        },
        {
          "Name": "Generate",
          "StepType": "PocoGenerate",
          "Namespace": "MyProject.Model",
          "ClassAccessModifier": "public",
          "ClassPartial": true,
          "VirtualNavigationProperties": false,
          "Usings": [],
          "Extends": [],
          "ClassNameReplace": [],
          "ClassNameForcePascalCase": true,
          "PropertyNameReplace": [
            {
              "Regex": "_",
              "ReplaceWith": ""
            }
          ],
          "ExcludeProperties": {
            "ExcludeExact": [],
            "ExcludeRegex": []
          },
          "PropertyNameForcePascalCase": true,
          "PropertyNullableIfDefaultAndNotPk": false
        },
        {
          "Name": "Write",
          "StepType": "PocoWrite",
          "OutputPath": "./",
          "CleanFolder": true,
          "ExcludeConstructor": false,
          "ConcreteCollectionType": "HashSet", //default: "HashSet"
          "Exclude": {
            "ExcludeExact": [],
            "ExcludeRegex": []
          },
          "ExcludeProperties": {
            "ExcludeExact": [],
            "ExcludeRegex": []
          }
        },
        {
          "Name": "DbContext",
          "StepType": "DbContext",
          "OutputPath": "./Model/MyDbContext.cs",
          "StubOutputPath": "./Model/MyDbContext.cs",
          "Namespace": "MyProject.Model",
          "ClassName": "MyDbContext",
          "ClassAbstract": false,
          "Extends": [ "DbContext" ],
          "IncludeProperties": true,
          "IncludeOnModelCreating": true,
          "IncludeOnModelCreatingStub": "Signature", // "", "Call", , "Signature"
          "IncludeOptionalStubs": false,
          "IncludeIndices": true,
          "IncludeViews": true,
          "IncludeTablesWithoutPK": true
        }
      ]
    }
  ]
}
